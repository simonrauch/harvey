{
  "name": "@simonrauch/harvey",
  "version": "2.3.27",
  "description": "A simple CLI for Harvest.",
  "bin": {
    "harvey": "./build/cli/index.js"
  },
  "files": [
    "build/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/simonrauch/harvey.git"
  },
  "bugs": {
    "url": "https://github.com/simonrauch/harvey/issues"
  },
  "scripts": {
    "prettier": "prettier --check './**/*.ts'",
    "prettier:fix": "prettier --write './**/*.ts'",
    "eslint": "eslint . --ext .ts",
    "eslint:fix": "eslint . --ext .ts --fix",
    "build": "rm -rf build && npx tsc && chmod +x build/cli/index.js",
    "dev": "npm run build && npx tsc --watch",
    "test": "mocha -r ts-node/register 'tests/**/*.ts'",
    "prepare": "husky install; npm run build",
    "preversion": "[[ -z $(git status --porcelain) ]] && git pull && npm run build && npm run prettier && npm run eslint && npm test",
    "postversion": "git push --follow-tags"
  },
  "keywords": [
    "harvest",
    "cli"
  ],
  "author": "Simon Rauch <sr@simonrauch.com>",
  "license": "MIT",
  "dependencies": {
    "cli-table": "^0.3.11",
    "exceljs": "^4.3.0",
    "node-harvest-api": "github:simonrauch/node-harvest-api",
    "yargs": "^17.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cli-table": "^0.3.0",
    "@types/filesystem": "^0.0.32",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-nock": "^1.3.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.2",
    "nock": "^13.2.4",
    "prettier": "2.6.0",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
